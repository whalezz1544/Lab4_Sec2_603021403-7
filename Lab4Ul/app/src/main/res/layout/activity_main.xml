<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text="Enter Student id" />

    <EditText
            android:id="@+id/edit_id"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"/>

    <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text="Enter Student name" />

    <EditText
            android:id="@+id/edit_name"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Subject"
            android:textSize="25sp"
            android:layout_marginTop="10dp" />

    <Spinner
            android:id="@+id/spiner_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/text_showDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:text="Time in class" />

    <Button
            android:id="@+id/btn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Select Time"
            android:onClick="showTimePickerDialog" />

    <TextView
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text="_ _:_ _" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <Button
            android:id="@+id/btn_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Show Detail"
            android:onClick="showDetail" />

    <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Reset"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/btn_show"
            android:onClick="reset" />
    </RelativeLayout>

    <TextView
            android:id="@+id/text_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="Show Detail" />





</LinearLayout>